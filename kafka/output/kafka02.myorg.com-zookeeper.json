{
    "servers": [
        {
            "port": 9011,
            "host": "kafka02.myorg.com",
            "queries": [
                {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GraphiteWriter",
                            "settings": {
                                "port": 2003,
                                "host": "graphite.myorg.com",
                                "rootPrefix" : "kafka_cluster.servers"
                            }
                        }
                    ],
                    "obj": "kafka.cluster:name=UnderReplicated,partition=*,topic=*,type=Partition",
                    "resultAlias": "UnderReplicatedPartitions",
                    "attr": [
                        "Value"
                    ]
                },
                {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GraphiteWriter",
                            "settings": {
                                "port": 2003,
                                "host": "graphite.myorg.com",
                                "rootPrefix" : "kafka_cluster.servers"
                            }
                        }
                    ],
                    "obj": "kafka:type=kafka.LogFlushStats",
                    "resultAlias": "LogFlushStats",
                    "attr": [
                        "FlushesPerSecond",
                        "MaxFlushMs",
                        "TotalFlushMs",
                        "AvgFlushMs",
                        "NumFlushes"
                    ]
                },
                {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GraphiteWriter",
                            "settings": {
                                "port": 2003,
                                "host": "graphite.myorg.com",
                                "rootPrefix" : "kafka_cluster.servers"
                            }
                        }
                    ],
                    "obj": "kafka.utils:name=cleaner-io,type=Throttler",
                    "resultAlias": "Throttler",
                    "attr": [
                        "Count",
                        "FifteenMinuteRate",
                        "FiveMinuteRate",
                        "MeanRate",
                        "OneMinuteRate"
                    ]
                }
            ],
            "numQueryThreads": 3
        }
    ]
}